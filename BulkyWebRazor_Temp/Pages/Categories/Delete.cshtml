@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>
		<div class="mb-3 row">
			<label asp-for="Category.Name" class="p-0"></label>
			<input asp-for="Category.Name" class="form-control" disabled/>
		</div>
		<div class="mb-3 row">
			<label asp-for="Category.DisplayOrder" class="p-0"></label>
			<input asp-for="Category.DisplayOrder" class="form-control" disabled/>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete Category</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/categories/delete" class="btn btn-secondary border form-control">Back to List</a>
			</div>
		</div>

	</div>
</form>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
